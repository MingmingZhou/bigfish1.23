            <jvmarg value="-Dsolr.solr.home=${ofbiz.home.dir}/hot-deploy/solr"/>
            <jvmarg value="-Dsolr.data.dir=${ofbiz.home.dir}/hot-deploy/solr/data"/>
            <arg value="pos"/>
        </java>
    </target>
